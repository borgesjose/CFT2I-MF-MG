L = 2;

x1=-2*L:0.001:2*L;
x2=-2*L:0.001:2*L;

Am_min = 1; 
Am_max = 5;

A = zeros(length(x1),length(x2));
%%

%%

%%

for i=1:length(x1), % De 1 até o No. total de medidas da variavel linguistica...
 for j=1:length(x2),
      %Am(i) = Inferencia_T2(x(i),y(i),L,Param,'NLI');  % pertinencia aos conjuntos fuzzy (curvatura)
      Ami = Inferencia_T2_SB(x1(i),x2(j),L,Param,'NLI');
      Am(j) = Ami*Am_max + Am_min*(1 - Ami);
 end
 A(i,:) = Am;
end
